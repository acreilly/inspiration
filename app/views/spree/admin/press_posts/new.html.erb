<% content_for :page_title do %>
   <%= Spree.t(:new_press_post) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_press_post_list), spree.admin_press_posts_url, :icon => 'arrow-left' %></li>
<% end %>

<%= render "spree/shared/error_messages", :target => @press_post %>

<%= form_for [:admin, @press_post] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => f %>
    <%= render :partial => 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
